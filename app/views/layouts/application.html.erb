<!DOCTYPE html>
<html>
  <head>
    <title>DonateFactory</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>
    <div class="container">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
         <ul class="nav navbar-nav navbar-right">
           <% if administrator_signed_in? %>
             <li class="dropdown">
               <a href="#" class="dropdown-toggle" data-toggle="dropdown"
               role="button" aria-haspopup="true" aria-expanded="false">
                <%= current_administrator.email %> <span class="caret"></span>
              </a>
               <ul class="dropdown-menu">
                 <li>
                   <%= link_to 'Criar Instituição', new_institution_path %>
                 </li>
                 <li>
                   <%= link_to 'Sair', destroy_administrator_session_path,
                                      method: :delete %>
                 </li>
               </ul>
             </li>
           <% else %>
              <li><%= link_to 'Entrar', new_administrator_session_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>
      <% flash.each do |type, message| %>
        <div class="alert <%= alert_class_for(type) %>">
          <button class="close" data-dismiss="alert">×</button>
          <%= message %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
